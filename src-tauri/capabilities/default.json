{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:app:allow-default-window-icon",
    "opener:allow-default-urls",
    "core:event:default",
    "dialog:default",
    "fs:default",
    "fs:allow-temp-write",
    "fs:allow-download-write",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$TEMP/*"
        },
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    }
  ]
}
